<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/write"
        android:src="@drawable/ic_write"
        app:maxImageSize="16dp"
        app:tint="@null"
        app:backgroundTint="@color/md_blue_grey_50"
        app:rippleColor="?attr/colorControlHighlight"
        app:elevation="5dp"
        app:pressedTranslationZ="1dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/top"
        android:src="@drawable/ic_arrow_up"
        android:visibility="invisible"
        app:fabCustomSize="46dp"
        app:backgroundTint="@color/transparent_grey"
        app:rippleColor="?attr/colorControlHighlight"
        app:shapeAppearanceOverlay="@style/CircleFloatingActionButton"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"/>

    <RelativeLayout
        android:id="@+id/main_view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/main_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/customTextColor"
            android:progressDrawable="@drawable/custom_progressbar"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="항목이 없습니다"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_title"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="작성하려면 추가 버튼을 누르세요"
            android:textColor="@color/customHintColor"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>