<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/write"
        android:src="@drawable/ic_write"
        app:maxImageSize="16dp"
        app:tint="@null"
        app:backgroundTint="@color/md_blue_grey_50"
        app:rippleColor="?colorControlHighlight"
        app:elevation="6dp"
        app:pressedTranslationZ="1dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/top"
        android:src="@drawable/ic_arrow_up"
        android:visibility="invisible"
        app:fabCustomSize="40dp"
        app:backgroundTint="@color/transparent_grey"
        app:rippleColor="?attr/colorControlHighlight"
        app:shapeAppearanceOverlay="@style/CircleFloatingActionButton"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>