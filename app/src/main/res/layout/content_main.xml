<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:backgroundTint="@color/white">

        <com.google.android.material.search.SearchBar
            android:id="@+id/main_searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:hint="@string/search"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:backgroundTint="@color/searchBarColor"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/customTextColor"
            app:forceDefaultNavigationOnClickListener="false"
            app:contentInsetStartWithNavigation="70dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:defaultMarginsEnabled="false"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/write"
        android:src="@drawable/ic_write"
        app:maxImageSize="16dp"
        app:tint="@null"
        app:backgroundTint="@color/md_blue_grey_50"
        app:elevation="6dp"
        app:pressedTranslationZ="1dp"
        android:transitionName="fab"
        app:rippleColor="?colorControlHighlight"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/top"
        android:src="@drawable/ic_arrow_up"
        android:visibility="invisible"
        app:fabCustomSize="40dp"
        app:backgroundTint="@color/transparent_grey"
        app:rippleColor="?attr/colorControlHighlight"
        app:shapeAppearanceOverlay="@style/CircleFloatingActionButton"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>