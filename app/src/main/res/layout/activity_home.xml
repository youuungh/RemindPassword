<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="Passwords\nManager"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/customTextColor"
        android:fontFamily="@font/sansation"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_signup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@id/home_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/rounded_register_button"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@null"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/rounded_login_button"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="@color/customTextColor"
        android:textSize="18sp"
        app:backgroundTint="@null"/>
</RelativeLayout>