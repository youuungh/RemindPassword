<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/login_layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="로그인"
            app:titleCentered="true"
            app:titleTextColor="@color/customTextColor"
            app:navigationIcon="@drawable/ic_arrow_left"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/loginScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_layout_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_layout_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="0dp"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                android:focusableInTouchMode="true"
                app:endIconMode="clear_text"
                app:endIconDrawable="@drawable/ic_clear_text"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeErrorColor="?attr/colorError"
                app:hintEnabled="false"
                app:errorEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_email"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일 입력"
                    android:fontFamily="@font/dm_sans"
                    android:inputType="textEmailAddress"
                    android:longClickable="false"
                    android:textColorHint="#ADA4A5"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_layout_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                android:focusableInTouchMode="true"
                app:endIconMode="password_toggle"
                app:endIconDrawable="@drawable/custom_password_toggle"
                app:endIconCheckable="true"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeErrorColor="?attr/colorError"
                app:hintEnabled="false"
                app:errorEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_password"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 입력"
                    android:fontFamily="@font/dm_sans"
                    android:inputType="textPassword"
                    android:longClickable="true"
                    android:textColorHint="#ADA4A5"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal|center_vertical"
                    app:backgroundTint="@null"
                    android:background="@drawable/flag_login_button"
                    android:text="로그인"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:enabled="false"/>

                <ProgressBar
                    android:id="@+id/login_progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:translationZ="2dp"
                    android:visibility="invisible"
                    android:indeterminateTint="@color/white"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:text="비밀번호 재설정"
                    android:textColor="#49454f"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ADA4A5"/>

                <TextView
                    android:id="@+id/tv_signup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:textSize="15sp"
                    android:layout_gravity="center|start"
                    android:text="이메일 계정생성"
                    android:textColor="#49454f"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>